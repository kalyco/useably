<!DOCTYPE html>
<html>
<head>
  <title>Useably</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="left-col">
    <div class="logo"><%= link_to image_tag("http://i.imgur.com/M4S7iR3.png"), photos_path %>
    </div>
    <ul class="filters">
      <li><%= link_to 'Section 1', photos_path %></li>
      <li><%= link_to 'Section 2', photos_path %></li>
      <li><%= link_to 'Section 3', photos_path %></li>
      <li><%= link_to 'Section 4', photos_path %></li>
      <li><%= link_to 'Section 5', photos_path %></li>
    </ul>
    <div class="about-index">
    <p>wordswordswords</p>
    </div>
  </div>
  <div class="right-col">
    <div class="search">
      <%= form_tag(photos_path(@photos), :method => "get", class: "navbar-form", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "search photos" %>
      <% end %>
   </div>
    <ul class="right">
      <%- if current_user -%>
        <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>

        <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
      <%- else -%>
        <li><%= link_to 'Sign Up', new_user_registration_path %></li>
        <li><%= link_to 'Sign In', new_user_session_path %></li>
      <%- end -%>
    </ul>
  </div>
</nav>


  <%- flash.each do |key, value| -%>
    <div class="flash flash-<%= key %>">
      <%= value %>
    </div>
  <%- end -%>

  <%= yield %>

  <%= javascript_include_tag 'application' %>
  <%= yield :extra_footer %>
</body>
</html>
