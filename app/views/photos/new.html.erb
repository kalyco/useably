<%- if @photo.errors.present? -%>
  <%- @photo.errors.full_messages.each do |error| -%>
    <ul>
      <li><%= error %></li>
    </ul>
  <% end %>
<% end %>


  <h1>enter photo information</h1>

  <div class="row">
    <div class="small-8 large-centered column">
      <%= form_for @photo do |f| %>

        <div class="field">
          <%= f.label :name, "name" %>
          <%= f.text_area :name %>
        </div>

        <div class="field">
          <%= f.label :description, "description" %>
          <%= f.text_area :description %>
       </div>

        <div class="field">
          <%= f.label :source, "source url" %>
          <%= f.text_area :source %>
        </div>

        <%= f.fields_for @tag do |field| %>
          <div class="field">
            <%= field.label "tags " %></div>
            <%= field.text_area :name %>
        <% end %>

        <div class="field">
          <%= f.file_field :image_file %>
        </div>

        <div class="actions">
          <%= f.submit "add photo" %>
        </div>
    <% end %>
  </div>
</div>
